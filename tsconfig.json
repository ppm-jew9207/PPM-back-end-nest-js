{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ppm/shared/storybook": ["libs/shared/storybook/src/index.ts"],
      "@ppm/shared/test": ["libs/shared/test/src/index.ts"],
      "@ppm/shared/advert-card": ["libs/shared/advert-card/src/index.ts"],
      "@ppm/shared/top-right-bar": ["libs/shared/top-right-bar/src/index.ts"],
      "@ppm/shared/info-card": ["libs/shared/info-card/src/index.ts"],
      "@ppm/shared/login-component": [
        "libs/shared/login-component/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
